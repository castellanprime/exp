FROM vitorenesduarte/lsim-base

MAINTAINER Vitor Enes <vitorenesduarte@gmail.com>

ENV NAME=/lsim

WORKDIR /opt
COPY include $NAME/include/
COPY bin $NAME/bin/
COPY config $NAME/config/
COPY src $NAME/src/
COPY rebar3 rebar.config rebar.lock Makefile tools.mk $NAME/

WORKDIR $NAME
RUN make stage

CMD make run
